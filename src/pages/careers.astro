<Layout title='Careers' namespace="careers">

  <div class="pin-wrapper">
    <section data-anim-group="cascade" id="hero" class="hero text-center relative grid">
      <!-- content -->
      <div class="col-start-1 col-end-1 row-start-1 row-end-1 w-full h-full grid wrapper grid-rows-[var(--site-header-height)_1fr_calc(var(--diagWrapperHeight)_/_2)] bg-darkgray text-white overflow-hidden justify-center min-h-[675px] xl:min-h-screen">
        <div class="row-start-2 !flex items-center transition-in -translate-y-[10%] xl:translate-y-0">
          <div class="transition-fade">
    
            <h2 class="h1 text-[55px] md:text-72 xl:text-[120px] xl:leading-[110px]"><span class="text-outline text-outline--light">Join our</span> <br class="hidden md:block" />team</h2>
            <Button slash tag="a" href="#openings">view job openings</Button>
          </div><!-- transition-fade -->
        </div>
      </div>

      <!-- photos -->
      <!-- top -->
      <figure data-anim-item="1" class="absolute z-50 top-0 left-1/2 translate-y-[100vh] -translate-x-1/2 opacity-0">
        <div class="transition-fade">
          <picture class="bg-mediumgray">
            <img class="aspect-[438/448] w-[166px] sm:w-[250px] md:w-[250px] xl:w-[438px] object-cover object-center" src="/careers/winslow-treat.jpg" alt="">
          </picture>
        </div>
      </figure>
      <!-- right -->
      <figure data-anim-item="2" class="absolute z-50 -right-8 lg:-right-20 translate-y-[100vh] opacity-0">
        <div class="transition-fade">
          <picture class="bg-mediumgray">
            <img class="aspect-[438/448] w-[166px] sm:w-[250px] md:w-[250px] xl:w-[438px] object-cover object-center" src="/careers/matt-hat.jpg" alt="">
          </picture>
        </div>
      </figure>
      <!-- left -->
      <figure data-anim-item="3" class="absolute z-50 left-[--container-margin] translate-y-[100vh] opacity-0">
        <div class="transition-fade">
          <picture class="bg-mediumgray">
            <img class="aspect-[438/448] w-[166px] sm:w-[250px] md:w-[250px] xl:w-[438px] object-cover object-center" src="/careers/andy-frog.jpg" alt="">
          </picture>
        </div>
      </figure>
      <!-- bottom -->
      <figure data-anim-item="4" class="absolute z-50 left-1/2 translate-y-[100vh] -translate-x-1/2 opacity-0">
        <div class="transition-fade">
          <picture class="bg-mediumgray">
            <img class="aspect-[438/448] lg:translate-x-[80%] w-[166px] sm:w-[250px] md:w-[250px] xl:w-[438px] object-cover object-center" src="/careers/iwd.jpg" alt="">
          </picture>
        </div>
      </figure>

    </section>

    <div class="wrapperCap wrapperCap--top"></div>
