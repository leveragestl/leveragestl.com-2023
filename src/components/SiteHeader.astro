---
import Logo from "./Logo.astro"
import MenuToggle from "./MenuToggle.astro";
import NavPanel from "./NavPanel.astro";
---

<div id="site-header">
  <div id="logo-menu" class="flex">
    <MenuToggle />
    <figure id="logo">
      <a href="/" class="">
        <Logo />
      </a>
    </figure>
  </div>
  
  <div id="project-start-button">
    <a class="button" href="">start a project</a>
  </div>
</div>

<NavPanel />

<style lang="scss" is:global>
  @import 'node_modules/easings-css';

  #site-header {
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--site-header-height);
    display: contents;

    & > * {
      display: flex;
      justify-content: flex-start;
      align-items: center;
      position: fixed;
      z-index: 999;
      height: inherit;
    }
  }

  #logo-menu {
    mix-blend-mode: difference;
    left: var(--container-margin);
    column-gap: 1rem;

    @screen lg {
      column-gap: 0;
    }
    a {
      height: 100%;
      padding: 5px 0;
      z-index: 999;
      margin-left: -10px;
      display: flex;
      align-items: center;

      @screen xl {
        margin-left: -10px;
      }
    }

    svg {
      width: auto;
      height: 50px;

      @screen xl {
        height: 60px;
      }
    }
  }

  #project-start-button {
    right: var(--container-margin);
  }
</style>