    transition: transform 500ms cubic-bezier(0.9,0.03,0.69,0.22);
  }
  .hover-gold {
    transition: color 300ms ease-out;

    &:hover {
      color: theme('colors.gold');
    }
  }

  .menu-toggle-active {
    #nav-panel {
