---
interface Props {
  title: string,
  description: string
}
const {title, description} = Astro.props
---

<div class="accordion">
  <input class="accordion__checkbox" type="checkbox" id="accordion-0">
  <div class="accordion__inner">
    <label class="accordion__header" for="accordion-0">
      <h4 class="accordion__question">{title}</h4>
      <div class="accordion__indicator"></div>
    </label>
    <div class="accordion__content">
      <div class="accordion__answer">
        <p set:html={description} />
      </div>
    </div>
  </div>
</div>