---
import CTASVG from "./CTASVG.astro";
const { class: className } = Astro.props
---

<section id="cta" data-anim-start="top 80%" class:list={['wrapper mt-24 lg:mt-48 lg:pb-16', className]}>
  <div class="max-w-screen-lg mx-auto text-center transition-fade">
    <!-- <div data-draw-svg="cta"><CTASVG /></div> -->
    <h3 class="h1 text-[45px] lg:text-[120px] lg:leading-[110px] mb-0 leading-none tracking-normal z-50 relative">
      <div data-anim-elem="fillText" class="grid grid-cols-1 grid-rows-1 mx-auto">
        <span data-fillText="outline" class="relative z-40 col-start-1 row-start-1 text-outline text-outline--dark">We're ready</span>
        <span data-fillText="fill" class="relative z-40 col-start-1 row-start-1">We're ready</span>
      </div>
      <span class="text-outline text-outline--filled">when you are.</span>
    </h3>
  </div>
  <div class="mt-12 w-full text-center">
    <span data-anim-elem="fadeInUp" class="button button--slash text-gold font-merriweather font-bold text-18 antialiased italic transition-colors duration-500 ease-in-out">
      <a href="#" class="anchor">
        <span class="text">start your project</span>
        <span class="line line--right"></span>
        <span class="line line--top"></span>
        <span class="line line--left line--left--end"></span>
        <span class="line line--left line--left--start"></span>
        <span class="line line--bottom"></span>
      </a>
    </span>
  </div>
</section>